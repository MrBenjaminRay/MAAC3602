            <string>if (global.state == "Paused") {
    return 0;
}

if (roundsFired == maxRoundsFired) {
    roundsFired = 0;
    isReloading = true;
    alarm[0] = room_speed * 3;
    continuousFire = false;
    audio_stop_sound(snd_M6100_loop);
    audio_play_sound(snd_M6100_end, 0, false);
    audio_sound_gain(snd_M6100_end, 0.5, 0);
}


if (attackRateCounter &lt; attackRate) {
    attackRateCounter += global.deltaTime;
}

if (mouse_check_button(mb_left)) {

    var canFire = global.state != "Paused";
    canFire &amp;= global.state != "Build";
    canFire &amp;= global.state != "Destroy";
    canFire &amp;= weaponObj != noone;
    canFire &amp;= isReloading == false;
    
    if (canFire &amp; allowedToFire &amp; mounted) {
        if(!continuousFire){
            continuousFire = true;
            audio_play_sound(snd_M6100_loop, 0, true);
            audio_sound_gain(snd_M6100_loop, 0.4, 0);
        }
        
        if (attackRateCounter &gt;= attackRate) {
            roundsFired++;
            //audio_play_sound(snd_playerGun, 0, false);
        
            var projX = x + weaponXOffset + (weaponObj.sprite_width * cos(degtorad(weaponObj.image_angle)));
            var projY = y + weaponYOffset + (weaponObj.sprite_width * -sin(degtorad(weaponObj.image_angle)));
            
            var projectile = instance_create(projX, projY, obj_projectile_rainbowTrout);
